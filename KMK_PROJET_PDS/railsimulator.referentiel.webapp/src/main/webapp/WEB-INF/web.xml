<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
	<servlet>
		<servlet-name>AccueilControler</servlet-name>
		<servlet-class>railsimulator.referentiel.webapp.controleur.AccueilControler</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>LigneControler</servlet-name>
		<servlet-class>railsimulator.referentiel.webapp.controleur.LigneControler</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>CantonControler</servlet-name>
		<servlet-class>railsimulator.referentiel.webapp.controleur.CantonControler</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>StationControler</servlet-name>
		<servlet-class>railsimulator.referentiel.webapp.controleur.StationControler</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>ReseauControler</servlet-name>
		<servlet-class>railsimulator.referentiel.webapp.controleur.ReseauControler</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LigneControler</servlet-name>
		<url-pattern>/ligne</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>AccueilControler</servlet-name>
		<url-pattern>/accueil</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>CantonControler</servlet-name>
		<url-pattern>/canton</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>StationControler</servlet-name>
		<url-pattern>/station</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ReseauControler</servlet-name>
		<url-pattern>/reseau</url-pattern>
	</servlet-mapping>
	
</web-app>